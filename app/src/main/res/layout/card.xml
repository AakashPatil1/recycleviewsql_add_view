<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/download"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Sadashiv Bhivsan Mahale High School"
                android:textStyle="bold"
                android:textColor="@color/para"
                android:textSize="22sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Contact No.:- 9662612499 (tel):- 0261 4567893"
                android:textStyle="bold"
                android:textColor="@color/para"
                android:textSize="12dp"
                android:gravity="center"/>


        </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/sudentphoto"
                android:layout_width="120dp"
                android:layout_marginTop="10dp"
                android:layout_height="120dp"
                android:src="@drawable/user"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_height="150dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Name :-"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/para"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="AAKASH SUBHASH PATIL"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Add :-"/>
                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/para"
                    android:maxLines="5"
                    android:layout_height="wrap_content"
                    android:text="PLOT No 152,CHIKUWADI ROW HOUSE SOCIETY,PANDESARA,SURAT-394210"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Ph. No. :-"/>
                    <TextView
                        android:id="@+id/parentno"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/para"
                        android:layout_marginLeft="8dp"
                        android:layout_height="wrap_content"
                        android:text="123456789"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="B.G. :-"/>
                <TextView
                    android:id="@+id/bg"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/para"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="A+"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Add:- Vinoba Nagar, Railway Colony, Limbayat, Surat, Gujarat 394210"
                android:textStyle="bold"
                android:textColor="@color/para"
                android:textSize="12sp"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>